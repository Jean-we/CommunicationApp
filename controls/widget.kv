<MainWidget>:

    # 加号按钮
    Button:  
        id: add_button
        # 按钮的点击区域
        size_hint: None,None
        size: 100,100
        # 按钮的坐标位置/相对
        pos_hint: {'x': 0.001, 'y': 0.933}
        # 点击反应时间
        on_press: print("你点击了 + 按钮")
        # 设置按钮背景颜色为白色
        background_color: 0, 0, 0, 0
        # 绘画指令
        canvas:
            Color:
                rgba: 0, 0, 0, 0.5 # 透明度
            Line:
                width: 2
                points: [4, 1545, 64, 1545]  # 横线
            Line:
                width: 2
                points: [32, 1575, 32, 1515]  # 竖线

    # 文字标签
    Label:
        id: text_label
        # 标签大小
        size_hint: None,None
        size: 150,100
        # 标签位置/相对
        pos_hint: {'x': 0.8, 'y': 0.93}
        # 标签文本  
        text: 'Contact'
        # 标签文本颜色
        color: 0, 0, 0, 0.5 # 透明度
