# 根组件
FloatLayout:
    # 锤子布局
    orientation: 'vertical'

    # 控件1左上角加号
    Button:  
        size_hint: None, None
        # 按钮的点击区域
        size: 100, 100  
        # 按钮的坐标位置/相对
        pos_hint: {'x': 0.001, 'y': 0.933}
        # 点击反应时间
        on_press: print("你点击了 + 按钮")
        # 设置按钮背景颜色为白色
        background_color: 0, 0, 0, 0
        # 绘画指令
        canvas:
            Color:
                rgba: 0, 0, 0, 1
            Line:
                width: 2
                points: [4, 1545, 104, 1545]  # 横线
            Line:
                width: 2
                points: [51, 1594, 51, 1494]  # 竖线